<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSurface"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Phidgets Ready" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_textView">

        <LinearLayout
            android:id="@+id/sensorInfo_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/leftX_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Left X:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/leftY_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Left Y:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/rightX_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Right X:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/rightY_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Right Y:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/yButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Y Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/bButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="B Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/aButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="A Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/xButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="X Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/upButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="↑ Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/rightButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="→ Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/downButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="↓ Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/leftButton_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="← Button:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/leftTrigger_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Left Trigger:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/rightTrigger_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Right Trigger:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/volumeKnob_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Volume Knob:"
                app:valueText="n/a" />

            <uk.whitecrescent.phidgetscontroller.views.SensorInfoView
                android:id="@+id/options_sensorInfoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="Options:"
                app:valueText="n/a" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>